{
  "name": "cartesia-download-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Cartesia TTS monorepo: CLI tool and Discord voice bot",
  "type": "module",
  "scripts": {
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "test:watch": "pnpm -r test:watch",
    "typecheck": "pnpm -r typecheck",
    "fmt": "oxfmt --write . && oxlint --fix .",
    "lint": "oxlint . && oxfmt --check .",
    "prepare": "husky"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "oxfmt": "^0.35.0",
    "oxlint": "^1.50.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": "oxlint"
  },
  "packageManager": "pnpm@10.27.0",
  "pnpm": {
    "onlyBuiltDependencies": [
      "@discordjs/opus",
      "better-sqlite3",
      "electron"
    ]
  }
}
